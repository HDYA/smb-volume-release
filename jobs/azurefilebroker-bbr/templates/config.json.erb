<%
  database_host = nil
  if_p('azurefilebroker.db_hostname') do |host|
    database_host = host
  end.else do
    database_host = link('database').instances[0].address
  end
%>
{
  "username":"<%= p('azurefilebroker.db_username') %>",
  "password":"<%= p('azurefilebroker.db_password') %>",
  "host":"<%= database_host %>",
  "port":<%= p('azurefilebroker.db_port') %>,
  "database":"<%= p('azurefilebroker.db_name') %>",
  "adapter":"<%= p('azurefilebroker.db_driver') %>"
}
