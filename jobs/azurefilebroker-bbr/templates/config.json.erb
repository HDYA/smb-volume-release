<%
  database_host = nil
  if_p('db_hostname') do |host|
    database_host = host
  end.else do
    database_host = link('database').instances[0].address
  end
%>
{
  "username":"<%= p('db_username') %>",
  "password":"<%= p('db_password') %>",
  "host":"<%= database_host %>",
  "port":<%= p('db_port') %>,
  "database":"<%= p('db_name') %>",
  "adapter":"<%= p('db_driver') %>"
}
