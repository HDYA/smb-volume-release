---
applications:
- name: "<%= p('app_name') %>"
  buildpacks:
  - binary_buildpack
  routes:
  - "<%= p('app_name') + '.' + p('app_domain') %>"
  memory: "<%= p('memory_in_mb') %>M"
  env:
    USERNAME: "<%= p('username') %>"
    PASSWORD: "<%= p('password') %>"
    DB_USERNAME: "<%= p('db_username') %>"
    DB_PASSWORD: "<%= p('db_password') %>"
